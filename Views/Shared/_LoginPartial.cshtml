@using JobNest.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<style>
    .register {
        background-color: purple;
        padding: 10px 20px !important;
    }

    .login {
        background-color: #007bff;
        padding: 10px 25px !important;
        margin-left: 20px;
    }

    .register, .login {
        border-radius: 4px;
        color: #fff !important;
    }

    body {
        font-family: "Montserrat", "sans-serif", Arial, sans-serif !important;
    }
</style>
<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item" style="display: flex; align-items:center">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark login">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
